        <outputs>
          <type allAnnotatorFeatures="true">org.apache.ctakes.typesystem.type.textsem.IdentifiedAnnotation</type>
          <type allAnnotatorFeatures="true">org.apache.ctakes.typesystem.type.textsem.EntityMention</type>
        </outputs>
        <languagesSupported/>
